<%= flash[:notice] %>
<h1>Editing Book</h1>


 <% if @book.errors.any? %>
  <%= @book.errors.count %>errors
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @book,method: :patch do |f| %>

<h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Boby</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Update Book' %>

  <%= link_to 'show', book_path(@book.id)%>
  <%= link_to 'back', books_path%>

<% end %>
